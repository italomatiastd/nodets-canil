<%- include('../partials/header') %>

<!-- Exibe o banner se ele estiver definido -->
<% if (typeof banner !== 'undefined' && banner) { %>
  <section class="banner" style="background-image: url('images/<%=banner.background%>')">
    <%=banner.title%>
  </section>
  <h2><%=banner.title%> disponíveis para adoção</h2>
<% } %>

<!-- Se houver animais na lista, exibe cada um -->
<% if (list && list.length > 0) { %>
  <div class="container list">
    <% list.forEach(item => { %>    
      <div class="item">
        <img src="/images/<%=item.image%>" class="item--image" />
        <div class="item--name"><%=item.name%></div>
        <div class="item--color">Cor: <%=item.color%></div>
        <div class="item--genre">Gênero: <%=item.genre%></div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <!-- Caso não haja animais na lista, mostra mensagem de vazio -->
  <div class="container no-list">
    <h2>Não há animais disponíveis nestas condições</h2>
  </div>
<% } %>

<%- include('../partials/footer') %>