<%- include('../partials/header') %>

<% if (banner) { %>
  <section class="banner" style="background-image: url('images/<%=banner.background%>')">
    <%=banner.title%>
  </section>
  <h2><%=banner.title%> disponíveis para adoção</h2>
<% } %>

<div class="container list">
  <% list.forEach(item => { %>    
    <div class="item">
      <img src="/images/<%=item.image%>" class="item--image" />
      <div class="item--name"><%=item.name%></div>
      <div class="item--color">Cor: <%=item.color%></div>
      <div class="item--genre">Gênero: <%=item.genre%></div>
    </div>
  <% }) %>
</div>
<%- include('../partials/footer') %>